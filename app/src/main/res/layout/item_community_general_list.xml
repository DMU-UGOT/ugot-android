<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="communityGeneralItem"
            type="com.example.ugotprototype.data.community.CommunityGeneralViewData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/community_v1"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/color_F0F1F3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_community_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:ems="15"
                android:maxLines="1"
                android:text="@{communityGeneralItem.comGeneralName}"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="롤할사람" />

            <TextView
                android:id="@+id/tv_community_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:ems="20"
                android:maxLines="1"
                android:text="@{communityGeneralItem.comGeneralText}"
                android:textColor="@color/color_80636363"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_community_name"
                app:layout_constraintTop_toBottomOf="@id/tv_community_name"
                tools:text="오후 5시 수업 끝나고 같이 PC방 가서 5인랭 할사람 있나? 저는 서폿만 하니까 원딜 구해서 듀오도 가요" />

            <ImageView
                android:id="@+id/iv_community_chat_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_community_chat"
                app:layout_constraintBottom_toTopOf="@id/community_v1"
                app:layout_constraintStart_toStartOf="@id/tv_community_name"
                app:layout_constraintTop_toBottomOf="@id/tv_community_text" />

            <TextView
                android:id="@+id/tv_community_chat_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:text="@{communityGeneralItem.comGeneralChat}"
                android:textSize="13dp"
                app:layout_constraintBottom_toTopOf="@id/community_v1"
                app:layout_constraintStart_toEndOf="@id/iv_community_chat_img"
                app:layout_constraintTop_toBottomOf="@id/tv_community_text"
                tools:text="1" />

            <ImageView
                android:id="@+id/iv_community_inquire_img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_community_inquire"
                app:layout_constraintBottom_toTopOf="@id/community_v1"
                app:layout_constraintStart_toStartOf="@id/tv_community_chat_input"
                app:layout_constraintTop_toBottomOf="@id/tv_community_text" />

            <TextView
                android:id="@+id/tv_community_inquire_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:text="@{communityGeneralItem.comGeneralInquire}"
                android:textSize="13dp"
                app:layout_constraintBottom_toTopOf="@id/community_v1"
                app:layout_constraintStart_toEndOf="@id/iv_community_inquire_img"
                app:layout_constraintTop_toBottomOf="@id/tv_community_text"
                tools:text="1" />

            <TextView
                android:id="@+id/tv_community_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="게시일 :"
                android:textSize="13dp"
                app:layout_constraintBottom_toTopOf="@id/community_v1"
                app:layout_constraintStart_toEndOf="@id/tv_community_inquire_input"
                app:layout_constraintTop_toBottomOf="@id/tv_community_text" />

            <TextView
                android:id="@+id/tv_community_date_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="10dp"
                android:text="@{communityGeneralItem.comGeneralDate}"
                android:textSize="13dp"
                app:layout_constraintBottom_toTopOf="@id/community_v1"
                app:layout_constraintStart_toEndOf="@id/tv_community_date"
                app:layout_constraintTop_toBottomOf="@id/tv_community_text"
                tools:text="5/28" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>