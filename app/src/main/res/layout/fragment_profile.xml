<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_school_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="42dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--상단-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/fv1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@color/color_F0F1F3" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_fg_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            app:layout_constraintTop_toBottomOf="@id/fv1"
                            tools:ignore="MissingConstraints">

                            <TextView
                                android:id="@+id/tv_fg_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="130dp"
                                android:maxLines="1"
                                android:paddingStart="10dp"
                                android:paddingBottom="15dp"
                                android:textColor="@color/black"
                                android:textSize="40dp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="John Park" />

                            <TextView
                                android:id="@+id/tv_fg_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="10dp"
                                android:textSize="18sp"
                                app:layout_constraintTop_toBottomOf="@+id/tv_fg_name"
                                tools:text="bagopa@naver.com" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="200dp"
                                android:paddingTop="10dp"
                                app:layout_constraintLeft_toRightOf="@+id/tv_fg_name"
                                tools:ignore="MissingConstraints">

                                <TextView
                                    android:id="@+id/tv_fg_stack_top"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="85dp"
                                    android:text="주 기술"
                                    android:textColor="@color/black"
                                    android:textSize="18dp" />

                                <TextView
                                    android:id="@+id/tv_fg_stack_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="85dp"
                                    android:text="Database"
                                    android:textSize="18dp"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_fg_stack_top" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!--중간-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_fg_medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@+id/layout_fg_top">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_fg_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:background="@color/color_F0F1F3"
                                    android:gravity="center_vertical"
                                    android:paddingStart="20dp"
                                    android:text="계정"
                                    android:textColor="@color/black"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/tv_fg_school"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/white"
                                    android:gravity="start"
                                    android:paddingStart="20dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="15dp"
                                    android:text="계정 정보 수정"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_fg_id" />

                                <View
                                    android:id="@+id/fv2"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="#d3d3d3"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_fg_school" />


                                <TextView
                                    android:id="@+id/tv_fg_stack"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/white"
                                    android:gravity="start"
                                    android:paddingStart="20dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="15dp"
                                    android:text="사용 기술"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/fv2" />

                                <View
                                    android:id="@+id/fv3"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="#d3d3d3"
                                    app:layout_constraintTop_toBottomOf="@id/tv_fg_stack" />


                                <TextView
                                    android:id="@+id/tv_fg_checkout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/white"
                                    android:gravity="start"
                                    android:paddingStart="20dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="15dp"
                                    android:text="회원 탈퇴"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/fv3" />

                                <View
                                    android:id="@+id/fv4"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="#d3d3d3"
                                    app:layout_constraintTop_toBottomOf="@id/tv_fg_checkout" />

                                <TextView
                                    android:id="@+id/tv_fg_logout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/white"
                                    android:gravity="start"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="15dp"
                                    android:text="로그아웃"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/fv4" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!--중간2-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_fg_medium2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/layout_fg_medium">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/tv_fg_option"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:background="@color/color_F0F1F3"
                                    android:gravity="center_vertical"
                                    android:paddingStart="20dp"
                                    android:text="앱 설정"
                                    android:textColor="@color/black"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/tv_fg_alarm"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/white"
                                    android:gravity="start"
                                    android:paddingStart="20dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="15dp"
                                    android:text="알림 설정"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tv_fg_option" />

                                <View
                                    android:id="@+id/fv5"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="#d3d3d3"
                                    app:layout_constraintTop_toBottomOf="@id/tv_fg_alarm" />

                                <TextView
                                    android:id="@+id/tv_fg_alarm_chat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/white"
                                    android:gravity="start"
                                    android:paddingStart="20dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="15dp"
                                    android:text="채팅 설정"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/fv5" />

                                <View
                                    android:id="@+id/fv6"
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:background="#d3d3d3"
                                    app:layout_constraintTop_toBottomOf="@id/tv_fg_alarm_chat" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!--하단-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/layout_fg_medium2">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:ignore="MissingConstraints">

                                <TextView
                                    android:id="@+id/tv_fg_app"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:background="@color/color_F0F1F3"
                                    android:gravity="center_vertical"
                                    android:paddingStart="20dp"
                                    android:text="앱 정보"
                                    android:textColor="@color/black"
                                    android:textSize="25dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_fg_app_version"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="300dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@color/white"
                                    android:gravity="start"
                                    android:paddingStart="20dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="15dp"
                                    android:text="앱 버전"
                                    android:textColor="@color/black"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_fg_app" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="300dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:gravity="start"
                                    android:paddingStart="20dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="15dp"
                                    android:textSize="18dp"
                                    app:layout_constraintLeft_toRightOf="@id/tv_fg_app_version"
                                    app:layout_constraintTop_toBottomOf="@id/tv_fg_app"
                                    tools:text="1.0.1 ver" />

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>