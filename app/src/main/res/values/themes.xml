<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ugotprototype" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:statusBarColor">@color/gray400</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Ugotprototype" parent="Base.Theme.Ugotprototype" />


    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/gray400</item>
    </style>

    <style name="TeamAppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">#F0F1F3</item>
    </style>

    <style name="NoShadowMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">#636363</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="groupDayTitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_group_notice_top_corner</item>
    </style>

    <style name="SignTitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="SignDetailTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16dp</item>
        <item name="android:textColorHint">#80808080</item>
        <item name="android:textColor">#80808080</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="chipStyle">@style/ChipWithoutClickEffect</item>
    </style>

    <style name="ChipWithoutClickEffect" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="android:textColor">#212121</item>
        <item name="chipBackgroundColor">@color/selector_chip_noclick_effect</item>
    </style>
</resources>